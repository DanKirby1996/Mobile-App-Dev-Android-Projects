<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83171616"
    android:minWidth = "100dp"
    android:minHeight= "250dp"
>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="-41dp"
        android:text="Item Category"
        android:textColor="#FFFFFF" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="175dp"
        android:layout_height="34dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:entries="@array/categories" />

    <EditText
        android:id="@+id/additemname"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner"
        android:layout_marginStart="-176dp"
        android:layout_marginLeft="-176dp"
        android:layout_marginBottom="-45dp"
        android:layout_toEndOf="@+id/spinner"
        android:layout_toRightOf="@+id/spinner"
        android:ems="10"
        android:hint="Item Name"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/additemdesc"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemname"
        android:layout_alignStart="@+id/additemname"
        android:layout_alignLeft="@+id/additemname"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:hint="Item Description"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/additemcost"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/additemdesc"
        android:layout_alignLeft="@+id/additemdesc"
        android:layout_alignBottom="@+id/additemdesc"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="-47dp"
        android:ems="10"
        android:hint="Cost"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/additemcheckbox"
        android:layout_width="126dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/additemdesc"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="-51dp"
        android:layout_toEndOf="@+id/additemcost"
        android:layout_toRightOf="@+id/additemcost"
        android:text="Purchased" />

</RelativeLayout>